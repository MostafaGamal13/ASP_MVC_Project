@model Item
@{
    ViewData["Title"] = "Delete";
}

<form method="post" >

    <div class="border p-3 mt-4">
        
        <input asp-for="Id" hidden />
        <div class="row pb-2" class="d-flex ">
            <div class="d-flex justify-content-end">
                <a asp-action="Index" asp-controller="Items" class="btn btn-secondary" style="width:150px" class="position-absolute top-0 end-0">
                    back to items <i class="bi bi-arrow-right-circle"></i>
                </a>
            </div>

            <div class="h1">Delete Item</div>

            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <!--This is the feild that user will type the-->
            <input asp-for="Name" disabled class="form-control" />


        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" disabled class="form-control" />
        </div>

        <div>
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" class="form-control" disabled asp-items="@ViewBag.CategoryList">
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <br />
        <hr />

        <button type="submit" class="btn btn-primary" style="width:150px">Delete</button>

    </div>
</form>