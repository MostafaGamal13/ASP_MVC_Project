@model IEnumerable<Item>
@{
    ViewData["Title"] = "Index";
}
<!-- container for all page -->
<div class="container p-3">

    <!--this is a partial view for Notifications when somthing happend-->
    <partial name="_Notification"/>

    <!--this is a container for the text and the button-->
    <div class="row pt-4">

        <!--this is a text and it's contanier-->
        <div class="col-6">

            <h2 class="text-primary">Items View</h2>
        </div>

        <!--this is a Button and it's contanier-->
        <div class="col-6 text-end">
            <a asp-controller="Items" asp-action="New" class="btn btn-primary">
                <i class="bi bi-plus"></i> &nbsp; Add New Item
            </a>
        </div>
    </div>
    <!--This is the start of table -->
    <table class="table table-hover">
        <thead>
            <!-- this is the start of the table head -->
            <tr>
                <th scope="col">
                    Item Name
                </th>
                <th scope="col">
                    Item Price
                </th>
                <th scope="col">
                    Category
                </th>
                <!--this is column for the buttons-->
                <th scope="col"> 
                </th>
            </tr>
        </thead>

        <tbody>
            <!--This is the body of the table-->
            @foreach (var item in Model)
            {
                <tr class="table-primary">
                    <td scope="row" width="40%" p>
                        @item.Name
                    </td>
                    <td width="15%">
                        @item.Price
                    </td>
                    <td width="25%">
                        @item.Category.Name
                    </td>
                    <td>
                        <a asp-controller="Items" asp-action="Edit" asp-route-Id = "@item.Id" class="btn btn-sm btn-success">
                            <i class="bi bi-pencil"></i>
                        </a>
                        &nbsp;
                        <a asp-controller="Items" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash3"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>